<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:id="@+id/layoutBeerChangeDialog">

    <Spinner android:id="@+id/spnLocations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="horizontal">
		<Button android:id="@+id/btnCancel" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:text="Cancel" />
			
		<Button android:id="@+id/btnOK" android:layout_alignParentRight="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:text="OK" />
	</LinearLayout>

</LinearLayout>